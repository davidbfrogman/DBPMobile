@using System.Web.Optimization
@using DBPMobile.Helpers
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/css")
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Dave Brown Photography</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.MenuLink("Home", "Index", "Home")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Portfolio<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Fashion I</a></li>
                            <li><a href="#">Fasion II</a></li>
                            <li class="divider"></li>
                            <li class="dropdown-header">Editorial</li>
                            <li><a href="#">Firestarter</a></li>
                            <li><a href="#">Star Collector</a></li>
                            <li class="divider"></li>
                            <li><a href="#">Portrait</a></li>
                            <li><a href="#">Engagement</a></li>
                            <li><a href="#">Band</a></li>
                        </ul>
                    </li>
                    <li>@Html.MenuLink("Contact", "Contact", "Home")</li>
                    <li>@Html.MenuLink("About", "About", "Home")</li>
                    <li>@Html.MenuLink("FAQ", "FAQ", "Home")</li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>
    @RenderSection("Carousel", false)
    <div class="container">
        <noscript>
            <div class="alert">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Warning!</strong> Please enable JavaScript in your browser!
            </div>
        </noscript>

        <div class="row">
            @if (IsSectionDefined("sidebar"))
            {
                <div class="span2">
                    @RenderSection("sidebar", required: false)
                </div>
            }

            <div id="content" @(IsSectionDefined("sidebar") ? Html.Raw("class=span10") : Html.Raw("class=span12"))>
                @if (IsSectionDefined("featured"))
                {
                    <div>
                        <div class="hero-unit">
                            @RenderSection("featured", required: false)
                        </div>
                    </div>
                }
                <div>
                    @RenderBody()
                </div>
            </div>
        </div>

        <div class="row">
            <div class="span12">
                <footer id="footer">
                    &copy; 2014 Dave Brown Photography <br />All Rights Reserved.
                </footer>
            </div>
        </div>
    </div>
    @Scripts.Render("~/js")
    @RenderSection("scripts", required: false)
</body>
</html>
